/**index.wxss**/
/* 标题 */
.titleContainer {
  display: flex;
  align-items: flex-end;
  padding: 20rpx 30rpx 0 24rpx;
}

.titleContainer text {
  color: #ee3f4d;
  font-size: 40rpx;
  font-weight: 600;
  text-align: left;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  font-size: 36rpx;
  height: calc(100vh - 80rpx);
  color: #909090;
}
.empty text {
  line-height: 70rpx;
}
.empty .iconfont {
  font-size: 300rpx;
  line-height: 280rpx;
}

.titleButton {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.titleButton button {
  background: none;
  color: #707070;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0;
  margin: 0 !important;
  width: 90rpx !important;
}
.titleButton text{
  color: #707070;
  font-size: 32rpx;
  font-weight: 500;
}

/* 抽奖内容 */
.lotteryListContainer {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.lotteryItem {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}
.lotteryItem .cover {
  width: 100%;
  height: 350rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.prizeList {
  padding: 20rpx 20rpx 0 20rpx;
}

.bottomContainer {
  display: flex;
  height: 100rpx;
  line-height: 60rpx;
  align-items: center;
  padding: 0 20rpx;
}
.bottomContainer .joinNow {
  display: flex;
  justify-content: center;
  width: 240rpx;
  font-size: 28rpx;
  color: #fff;
  background: #ee3f4d;
  border-radius: 30rpx;
}
.bottomContainer .joinNow .iconfont {
  margin-top: 2rpx;
}

.detailsCard {
  flex: 1;
}
.detailsCard text {
  height: 60rpx;
  font-size: 28rpx;
  color: #303030;
}
.detailsCard .time {
  font-size: 32rpx;
  font-weight: 550;
  color: #ee3f4d;
}

