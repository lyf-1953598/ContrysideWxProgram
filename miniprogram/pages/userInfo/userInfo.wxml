<!--pages/myinfo/myinfo.wxml-->
<!-- <text>pages/myinfo/myinfo.wxml</text> -->
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <!-- <open-data type="userAvatarUrl"></open-data> -->
      <image src="{{firstInfo.avatarUrl}}"></image>
    </view>
    <view class='nickname'>
     <text>{{firstInfo.nickName}}</text>
    </view>
  </view>
  <view class='item' bindtap='editName'>
      <text class='left'>名称：</text><text class='right'>{{myinfo.name}}</text>
    </view>
    <view class='item' bindtap="editAge">
      <text class='left'>年龄：</text><text class='right'>{{myinfo.age}}</text>
    </view>
    <view class='item' bindtap="editSex">
      <text class='left'>性别：</text><text class='right'>{{myinfo.sex}}</text>
    </view>
    <view class='item' bindtap="editTel">
      <text class='left'>联系方式：</text><text class='right'>{{myinfo.phone}}</text>
    </view>
    <view class='item'>
     <text class='left'> 志愿者志愿等级：</text><text class='right'>{{myinfo.voluntaryLevel}}</text>
    </view>
    <view class='item'>
     <text class='left'> 志愿者志愿时长：</text><text class='right'>{{myinfo.voluntaryAllhour}}</text>
    </view>
    <view class='item'>
     <text class='left'> 志愿者信誉分数：</text><text class='right'>{{myinfo.creditLevel}}</text>
    </view>
    <view class='item' bindtap='exit'>
      <text class='left'>退出：</text><text class='right'>>>></text>
    </view>
  
</view>