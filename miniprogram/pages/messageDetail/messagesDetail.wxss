/* pages/messageDetail/messagesDetail.wxss */
.background {
  width: 100%;
  height: 400rpx;
  background: -webkit-linear-gradient(top, #A2B38B, #fafafa);
  z-index: -1;
  position: absolute;
}

.avatar image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;

}

.chat-content {
  margin-top: 5px;
  width: 98%;
    margin: auto;
  overflow: scroll;
}
.chat-content .word {
  display: flex;
  margin-bottom: 10px;
}
.chat-content .word .avater {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 10rpx;
}
.chat-content .word img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.chat-content .word .info {
  max-width: 47%;
  margin-left: 10px;
}
.chat-content .word .info .info-content {
  word-break: break-all;
  display: inline-block;
  padding: 10px;
  font-size: 14px;
  background: #fff;
  position: relative;
  margin-top: 8px;
  background: #FAFDD6;
  border-radius: 24rpx;
}
.chat-content .word .info .info-content::before {
  position: absolute;
  left: -8px;
  top: 8px;
  content: "";
  border-right: 10px solid #FAFDD6;
  border-top: 8px solid transparent;
  border-bottom: 8px solid transparent;
}
.chat-content .word-my {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10px;
}
.chat-content .word-my .avater {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 10rpx;
}
.chat-content .word-my .info {
  max-width: 47%;
  text-align: right;
  display: flex;
  align-items: flex-end;
  flex-wrap: wrap;
  flex-direction: column;
}
.chat-content .word-my .info .info-content::after {
  position: absolute;
  right: -8px;
  top: 8px;
  content: "";
  border-left: 10px solid #B4E197;
  border-top: 8px solid transparent;
  border-bottom: 8px solid transparent;
}
.chat-content .word-my .info .info-content {
  word-break: break-all;
  /* max-width: 45%; */
  padding: 10px;
  font-size: 14px;
  margin-right: 10px;
  position: relative;
  margin-top: 8px;
  background: #B4E197;
  text-align: left;
  border-radius: 24rpx;
}
.chat-content .word-my .info img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.fengexian {
  margin-top: 0px;
  width: 100%;
  padding: 0px;
  height: 2%;
}
.inputArea {
  margin-top: 2px;
  width: 100%;
  height: 20%;
  display: flex;
}
.inputArea .textarea-bg {
  border-radius: 30rpx;
  background-color: #FAFDD6;
  padding: 10rpx;
  font-size: 40rpx;
  width: 75%;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.inputArea .sendmsg {
  background-color: var(--themeColor);
