  font-size: 30rpx;
  color: #ffffff;
  height: 100rpx;
  text-align: center;
  margin-left: 0rpx;
  padding-left: 5rpx;
  margin-right: 0rpx;
  padding-right: 0rpx;
}
.chat_function {
  margin-top: 10rpx;
  margin-left: 30rpx;
}
.chat_function .chat_icon {
  width: 50rpx;
