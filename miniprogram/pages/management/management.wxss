/* pages/management/management.wxss */
/* 顶部导航栏 */
.navBar {
  display: flex;
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  background: #fff;
}
.navBar .nav {
  width: 30%;
  margin: 0 8%;
  color: #505050;
  font-size: 32rpx;
  text-align: center;
}
.navBar .iconfont {
  font-size: 70rpx;
  color: #ee3f4d;
  width: 8%;
}
.navBar .selected {
  color: #ee3f4d;
  border-bottom: 8rpx solid #ee3f4d;
}

/* 抽奖内容 */
.lotteryListContainer {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.lotteryItem {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.lotteryItem .cover {
  width: 100%;
  height: 350rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.prizeList {
  padding: 20rpx 20rpx 0 20rpx;
}

.bottomContainer {
  display: flex;
  height: 100rpx;
  line-height: 60rpx;
  align-items: center;
  padding: 0 20rpx;
}
.bottomContainer .viewInfo {
  display: flex;
  justify-content: center;
  width: 240rpx;
  font-size: 28rpx;
  color: #fff;
  background: #ee3f4d;
  border-radius: 30rpx;
}
.bottomContainer .viewInfo .iconfont {
  font-size: 24rpx;
  margin-top: 2rpx;
  margin-right: 6rpx;
}

.detailsCard {
  flex: 1;
}
.detailsCard text {
  height: 60rpx;
  font-size: 28rpx;
  color: #303030;
}
.detailsCard .time {
  font-size: 32rpx;
  font-weight: 550;
  color: #ee3f4d;
}

/* 发起新的抽奖 */
.addNew {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 300rpx;
  border: 10rpx solid #a0a0a0;
  border-radius: 20rpx;
  text-align: center;
  color: #a0a0a0;
}
.addNew .iconfont {
  font-size: 120rpx;
  line-height: 160rpx;
}
.addNew text {
  font-size: 40rpx;
  font-weight: 550;
  line-height: 80rpx;
}

.noLottery {
  font-size: 36rpx;
  text-align: center;
  color: #707070;
}