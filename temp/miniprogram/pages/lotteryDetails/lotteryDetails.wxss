/* pages/lotteryDetails/lotteryDetails.wxss */
/* 渐变背景 */
.background {
  width: 100%;
  height: 400rpx;
  background: -webkit-linear-gradient(top, #ee3f4d, #fafafa);
  position: absolute;
}

.pageContainer {
  z-index: 1;
  padding: 0 20rpx;
}

/* 抽奖信息 */
.lotteryBannersContainer {
  background: #fff;
  border-radius: 10rpx;
}

.lotteryBanners {
  width: 100%;
  height: 400rpx;
}

.lotteryBanners image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx 10rpx 0 0;
}

.prizeList {
  padding: 0 30rpx;
  margin-top: 10rpx;
}

.prizeItem {
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #303030;
}

.prizeItem .number {
  margin-left: 10rpx;
  color: #707070;
}

.lotteryTime {
  padding: 0 30rpx;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #707070;
}

/* 抽奖说明 */
.introContainer {
  padding: 10rpx 30rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.introTitle {
  font-size: 36rpx;
  font-weight: 550;
  height: 80rpx;
  line-height: 80rpx;
  color: #303030;
}

.lotteryIntro {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #303030;
}

.imageList {
  display: flex;
}

.imageList .imageItem {
  padding-right: 10rpx;
  padding-top: 10rpx;
  margin: 10rpx 0;
}

.imageList .imageItem image {
  width: calc(28vw);
  height: calc(28vw);
  border-radius: 10rpx;
}

/* 已经参与 */
.ispart {
  margin: 60rpx 0;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  color: #ee3f4d;
}

/* 参与抽奖 */
.joinContainer {
  display: flex;
  justify-content: center;
  margin: 80rpx 0;
}
.joinButton {
  width: 240rpx;
  height: 240rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
  line-height: 240rpx;
  border-radius: 50%;
  border: 15rpx solid #ffcfcf;
  background: #ee3f4d;
}

/* 参与名单 */
.partListContainer {
  text-align: center;
  color: #707070;
  margin-bottom: 10rpx;
}
.partListContainer text {
  justify-content: start;
}

.partNum {
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color: #707070;
}
.partNum .viewAll {
  margin-left: 10rpx;
  color: #A2B38B;
}
.partNum .viewAll .iconfont {
  font-size: 22rpx;
}

.partList {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.partList .partItem {
  width: 80rpx;
  height: 80rpx;
}
.partList .partItem image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 5rpx;
}

/* 底部栏 */
.bottomContainer {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  background: #fff;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
}

.share {
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share button {
  background: none;
  height: 100rpx;
  padding: 0;
}
.share .iconfont {
  font-size: 50rpx;
  color: #ee3f4d;
}
.share .shareText {
  margin-top: -10rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #303030;
}

.backLottery {
  font-size: 30rpx;
  text-align: center;
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
  background: #ee3f4d;
  color: #fff;
}
.backLottery text {
  font-size: 32rpx;
}