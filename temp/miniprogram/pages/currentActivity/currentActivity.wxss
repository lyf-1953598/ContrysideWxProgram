/* pages/apply/apply.wxss */
.pageContainer {
  padding: 20rpx;
}

/* 奖项信息 */
.prizeInfo {
  position: relative;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.prizeInfo image {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx 10rpx;
}
.prizeInfo .changeImg {
  position: absolute;
  margin-top: -380rpx;
  margin-left: 490rpx;
  width: 200rpx;
  height: 50rpx;
  font-size: 28rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.prizeInfo .changeImg text{
  font-size: 38rpx;
  padding-top: 4rpx;
}
.prizeInfo .delPrize {
  position: absolute;
  margin-top: -380rpx;
  margin-left: 30rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  background: #ee3f4d;
  border-radius: 50%;
}

.inputContainer {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 10rpx;
}
.inputContainer text {
  font-size: 28rpx;
}
.inputContainer .infoInput {
  flex: 1;
  font-size: 26rpx;
  text-align: end;
}

.divider {
  height: 2rpx;
  background: #fafafa;
}

.addPrize {
  font-size: 28rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  color: #A2B38B;
}

.placehold {
  font-size: 28rpx;
  color: #cacaca;
}

/* 抽奖说明 */
.reasonContainer {
  padding: 10rpx;
  padding-bottom: 0;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.reasonContainer .title {
  font-size: 28rpx;
  font-weight: 550;
  height: 50rpx;
  line-height: 50rpx;
  color:#A2B38B;
}
.reasonContainer .reasonInput {
  font-size: 28rpx;
  color: #303030;
  height: 320rpx;
  line-height: 40rpx;
}
.reasonContainer .textPlacehold {
  font-size: 28rpx;
  color: #cacaca;
  height: 320rpx;
  line-height: 40rpx;
}
.reasonContainer .addImg {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #A2B38B;
}
.reasonContainer .addImg .iconfont {
  font-size: 48rpx;
  margin-top: 4rpx;
}

/* 图片列表 */
.introImageList {
  display: flex;
}
.introImageList .imageItem {
  padding-right: 10rpx;
  padding-top: 10rpx;
  margin: 10rpx 0;
}
.introImageList .imageItem image {
  width: calc(28vw);
  height: calc(28vw);
  border-radius: 10rpx;
}
.introImageList .delImg {
  position: absolute;
  margin-top: -200rpx;
  margin-left: 20rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  font-weight: 600;
  text-align: center;
  color: #fff;
  background: #ee3f4d;
  border-radius: 50%;
  border: 2rpx solid #fff;
}


.itemContainer {
  padding: 10rpx;
  padding-bottom: 0;
  background: #fff;
  border-radius: 10rpx;
  /* border-bottom: #A2B38B 1px dashed; */
}
.itemContainer .title {
  font-size: 32rpx;
  font-weight: 550;
  height: 50rpx;
  line-height: 50rpx;
  color: #303030;
}
.itemContainer .inputContainer{
  padding: 0;
}
.itemTitle{
  font-size: 32rpx;
  font-weight: 550;
  color:#a2b38b;
  width: 80px;
}
.timePicker {
  flex: 1;
  font-size: 28rpx;
  text-align: right;
  color: #cacaca;
}

/* 发布抽奖/完成编辑 */
.releaseButton {
  margin-top: 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 550;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #a2b38b;
  border-radius: 40rpx;
}
.nameInput{
font-size: 35rpx;
  /* width: 200px; */
}
.placehold{
  font-size: 28rpx;
  color: rgb(152, 145, 145);
}
.typePicker{
  margin-left: 70px;
  width: 200px;
  height: 30px;
}
.startPicker{
  margin-left: 90rpx;
  width: 200px;
}
.endPicker{
  margin-left: 90rpx;
  width: 200px;
}